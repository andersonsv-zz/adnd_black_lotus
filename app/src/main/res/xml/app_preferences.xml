<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.v7.preference.PreferenceCategory
    android:title="@string/pref_language">
    <ListPreference
        android:key="key_second_language_api"
        android:title="@string/pref_language"
        android:summary="@string/pref_language_summary"
        android:entries="@array/second_language_api"
        android:entryValues="@array/second_language_api"
        android:id="@+id/selectSecondLanguage"/>

</android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="@string/navigation_decks">

        <android.support.v7.preference.EditTextPreference
            android:key="key_quantity_same_cards_in_deck"
            android:title="@string/pref_quantity_same_cards_in_deck_title"
            android:persistent="true"
            android:dialogTitle="@string/pref_quantity_same_cards_in_deck_title"
            android:dialogMessage="@string/pref_quantity_same_cards_in_deck_msg"
            android:defaultValue="50" />

    </android.support.v7.preference.PreferenceCategory>
</android.support.v7.preference.PreferenceScreen>